<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.messageimposible.messageimpossible">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/message_impossible_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/message_impossible_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ActivityTabs"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityRegister" />
        <activity android:name=".ActivityForgotPass" />
        <activity android:name=".ActivityInchat"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ActivitySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>


</manifest>