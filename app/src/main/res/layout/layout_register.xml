<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/blueBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo_login"
            android:rotation="14"
            app:srcCompat="@drawable/message_impossible_logo04" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/blueBackground"
        android:layout_marginTop="-30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <EditText
            android:id="@+id/et_username_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_editx_text_background"
            android:drawableLeft="@drawable/graphic_05"
            android:drawableStart="@drawable/graphic_05"
            android:hint="@string/username_txt"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_editx_text_background"
            android:drawableLeft="@drawable/graphic_08"
            android:drawableStart="@drawable/graphic_08"
            android:hint="@string/email_hint"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/graphic_06"
            android:drawableStart="@drawable/graphic_06"
            android:inputType="textPassword"
            android:background="@drawable/register_editx_text_background"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_txt"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/graphic_06"
            android:drawableStart="@drawable/graphic_06"
            android:inputType="textPassword"
            android:background="@drawable/register_editx_text_background"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/login_button_background"
            android:drawableEnd="@drawable/graphic_07"
            android:drawablePadding="-30dp"
            android:drawableRight="@drawable/graphic_07"
            android:text="@string/register_txt"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_txt"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/google_button_background"
            android:drawableEnd="@drawable/graphic_07"
            android:drawableRight="@drawable/graphic_07"
            android:drawableLeft="@drawable/google_icon"
            android:drawableStart="@drawable/google_icon"
            android:text="@string/login_with_google_txt"
            android:textColor="@color/white"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/facebook_button_background"
            android:drawableEnd="@drawable/graphic_07"
            android:drawableRight="@drawable/graphic_07"
            android:drawableLeft="@drawable/facebook_icon"
            android:drawableStart="@drawable/facebook_icon"
            android:text="@string/login_with_facebook_txt"
            android:textColor="@color/white"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_account_txt"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5dp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_here_txt"
            android:textColor="@color/orangeMain"
            android:textSize="15sp"
            android:padding="5dp"
            tools:ignore="SmallSp" />

    </LinearLayout>

</LinearLayout>